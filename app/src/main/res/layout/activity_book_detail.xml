<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageViewBook"
        android:layout_width="190dp"
        android:layout_height="296dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/book1" />

    <TextView
        android:id="@+id/textViewBookName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/imageViewBook"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-296dp"
        android:text="Dish Name"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/orderBook"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customerNameEditTextbook"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="96dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="101dp"
        android:backgroundTint="#004524"
        android:text="Order"
        app:cornerRadius="12dp"
        tools:ignore="HardcodedText" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/customerNameEditTextbook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="357dp"
        android:hint="What is your name?"
        android:minHeight="48dp"
        android:paddingLeft="10sp"
        android:textSize="16sp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/dish_menu" />

    <TextView
        android:id="@+id/amount"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_navigation2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="148dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="140dp"
        android:text="TextView" />
</RelativeLayout>
